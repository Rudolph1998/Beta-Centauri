<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- The above 3 meta tags must come first in the head; any other head content must come after these tags -->
    <title>Beta Centauri (P) Ltd.</title>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="js/html5shiv.min.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/favicon.png" />

    <!-- Bootstrap -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!--Font Awesome-->
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <!--Linearicons-Free-->
    <link rel="stylesheet" href="~/css/linearicons-free.css" />
    <!--fancybox-->
    <link rel="stylesheet" href="~/vendor/fancybox/css/fancybox.css" />
    <!--simple-line-icons-->
    <link rel="stylesheet" href="~/css/simple-line-icons.css" />
    <!--animation-css-->
    <link rel="stylesheet" href="~/css/animate.css" />
    <!--Flexslider-css-->
    <link rel="stylesheet" href="~/vendor/flexslider/flexslider.css" />

    <!--Theme Styles-->
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/style.css" />

</head>
<body>
    <header class="site-header" id="masthead">
        <!-- header_meta #start -->
        <div class="header_meta">
            <div class="container">
                <div class="row">
                    <p class="site-description col-xs-12 col-sm-6">The Most Complete Education Solution</p>
                    <nav class="meta-login">
                        <ul>
                            <li class="call"><i class="lnr lnr-smartphone"></i>Call Us +91 9777552206</li>
                            <li> @Html.ActionLink("Enquiry", "Enquiry")        </li>
                            <li> @Html.ActionLink("Registration", "Registration") </li>
                            <li> @Html.ActionLink("LogIn", "LogIn") </li>
                        </ul>
                    </nav>
                </div>
                <!--row #end-->
            </div>
            <!--container #end-->
        </div>
        <!-- Header Meta #end -->
        <!-- header_meta #end -->

        <div class="container">
            <div class="row">
                <!-- #site-branding #start -->
                <div class="site-branding col-xs-12 col-sm-3">
                    <a rel="home" href="#"> <img alt="educationpress" class="brand" src="~/images/logo.png" /> </a>
                </div>
                <!-- #site-branding #end -->
                <!-- #site-navigation #start -->
                <nav class="main-navigation navbar navbar-default" id="site-navigation">
                    <div class="navbar-header">
                        <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"> @Html.ActionLink("Home", "Index")</li>
                            <li>@Html.ActionLink("About us", "About", "Index")</li>
                            <li class="nav-item dropdown-submenu">
                                <a href="#" id="menu" data-toggle="dropdown" class="nav-link dropdown-toggle">Services <span class="caret"></span> </a>
                                <ul class="dropdown-menu mt-2 rounded-0 primary-color border-0 z-depth-1">
                                    <li class="dropdown-item dropdown-submenu p-0">
                                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Tech. Training <span class="caret-submenu"></span> </a>
                                        <ul class="dropdown-menu ml-2 rounded-0 primary-color border-0 z-depth-1">
                                            <li>@Html.ActionLink("Basic Programming", "Basic", "Index") </li>
                                            <li>  @Html.ActionLink("Web Development", "Web", "Index")</li>
                                            <li> @Html.ActionLink("Mobile App Ḍevelopment", "Mobile", "Index")</li>
                                            <li> @Html.ActionLink("Embadded System", "Embad", "Index")</li>
                                            <li>  @Html.ActionLink("Database", "Database", "Index")</li>
                                            <li>  @Html.ActionLink("Other Programs", "Other", "Index")</li>
                                        </ul>
                                    </li>
                                    <li> @Html.ActionLink("Internship / Final Year Project", "Internship", "Index")</li>
                                </ul>
                            </li>
                            <li> @Html.ActionLink("Team", "Team", "Index")</li>
                            <li> @Html.ActionLink("Events", "Event", "Index")</li>
                            <li> @Html.ActionLink("Contacts", "Contact", "Index")</li>
                        </ul>
                    </div>
                </nav>
                <!-- #site-navigation  #end-->
            </div>
            <!--row #end-->
        </div>
        <!--container #end-->
        @RenderBody();
    </header>
    <footer id="colophon" class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-4 footer-widget">
                    <aside class="widget widget_text" id="text-1">
                        <h6 class="widget-title">About Beta Centauri (P) Ltd.</h6>
                        <div class="textwidget">
                            <p>
                                Lorem ipsum dolor sit amet, consectet ur adipiscing Nunc varius sed dolor sed sagittis will be helpful. Morbi quis eros ornare, rhoncus lorem efficitur erat. Morbi est at. &nbsp;&nbsp;
                                <a href="aboutus.html" class="custom-more">Read More <i class="lnr lnr-arrow-right"></i></a>
                            </p>
                            <ul class="social-icons">
                                <li>
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                </li>
                            </ul>
                        </div>
                    </aside>
                </div>

                <div class="col-xs-12 col-sm-2 footer-widget">
                    <aside class="widget menu">
                        <h6 class="widget-title">Quick Links</h6>
                        <ul>
                            <li>@Html.ActionLink("About us", "About", "Index")</li>
                            <li> @Html.ActionLink("Team", "Team", "Index")</li>
                            <li> @Html.ActionLink("Events", "Event", "Index")</li>
                            <li> @Html.ActionLink("Contacts", "Contact", "Index")</li>
                            <li><a href="#">FAQ</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                            <li><a href="#">Terms & Conditions</a></li>
                        </ul>
                    </aside>
                </div>

                <div class="col-xs-12 col-sm-3 footer-widget">
                    <aside class="widget menu">
                        <h6 class="widget-title">Courses</h6>
                        <ul>
                            <li>@Html.ActionLink("Basic Programming", "Basic", "Index") </li>
                            <li>  @Html.ActionLink("Web Development", "Web", "Index")</li>
                            <li> @Html.ActionLink("Mobile App Ḍevelopment", "Mobile", "Index")</li>
                            <li> @Html.ActionLink("Embadded System", "Embad", "Index")</li>
                            <li>  @Html.ActionLink("Database", "Database", "Index")</li>
                            <li>  @Html.ActionLink("Other Programs", "Other", "Index")</li>
                            <li>     @Html.ActionLink("Internship / Final Year Project", "Internship", "Index")</li>
                        </ul>
                    </aside>
                </div>
                @using (Html.BeginForm("Contact","Index"))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-xs-12 col-sm-3 ">
                        <aside class="widget widget_quickcontact">
                            <h6 class="widget-title">Quick Contact</h6>
                            <form class="quickcontact" method="post" id="contactForm">
                                <p><input type="text" placeholder="Name" class="qc-text" required id="name" name="name" /></p>
                                <p><input type="number" id="phone" name="phone" class="qc-text" placeholder="Contact Number" /></p>
                                <p><input type="email" id="email" name="email" class="qc-text" required placeholder="Email Address" /></p>
                                <p><textarea placeholder="Message" class="qc-textarea" name="message" id="message" rows="5" cols="30"></textarea></p>
                                <p><input type="submit" class="qc-submit btn btn-default" value="→" /></p>
                            </form>
                        </aside>
                    </div>
                }
                </div>
        </div>
        <!--container #end  -->

        <div class="container">
            <div class="row">
                <div class="copyright">
                    <p class="copy col-xs-12 col-sm-6">&copy; Copyright 2020. All Rights Reserved</p>
                    <p class="develop col-xs-12 col-sm-3 text-right">Developed by <a href="#" target="_blank">BCPL</a></p>
                </div>
            </div>
        </div>

    </footer>
    <!-- register popup #end -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!--Contact Form-->
    <script src="~/js/jquery.form.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/contact.js"></script>
    <!-- Theme js -->
    <script src="~/js/theme.js"></script>
    <!-- Fancybox js -->
    <script type="text/javascript" src="~/vendor/fancybox/js/jquery.fancybox.js"></script>
    <script type="text/javascript" src="~/vendor/fancybox/js/custom.fancybox.js"></script>
    <script>
        jQuery.noConflict();
        jQuery(".fancybox").fancybox();</script>
    <!--Google Map-->
    <script src="https://maps.googleapis.com/maps/api/js?callback=mapBox"></script>
</body>
</html>